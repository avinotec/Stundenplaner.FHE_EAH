<de.fhe.fhemobile.views.navigation.NavigationView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="de.fhe.fhemobile.fragments.navigation.NavigationFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/navigationButtonPrevPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/navigation_button_prev_plan"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:background="@drawable/buttonshape_filled"
                />

            <Button
                android:id="@+id/navigationButtonNextPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/navigation_button_prev_plan"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:background="@drawable/buttonshape_filled"
                />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/navigation_placeholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent" >

            <ImageView
                android:id="@+id/imageview_floorplan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>

    </LinearLayout>

</de.fhe.fhemobile.views.navigation.NavigationView>
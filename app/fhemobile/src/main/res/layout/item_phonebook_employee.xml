<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
    android:layout_height="@dimen/list_extended_single_item_height"
    android:paddingTop="@dimen/list_item_vertical_padding"
    android:paddingBottom="@dimen/list_item_vertical_padding"
    android:paddingLeft="@dimen/list_item_horizontal_padding"
    android:paddingRight="@dimen/list_item_horizontal_padding"
    >

    <TextView
        android:id="@+id/phoneItemFullName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="New Text"
        android:textStyle="bold"
        android:textColor="@color/list_item_text"
        android:textSize="@dimen/list_single_item_text_size"
        android:layout_toLeftOf="@+id/phoneItemDivision"
        />

    <TextView
        android:id="@+id/phoneItemDivision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textColor="@color/list_item_text_secondary"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        />
    
    <TextView
        android:id="@+id/phoneItemRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textColor="@color/list_item_text_secondary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>
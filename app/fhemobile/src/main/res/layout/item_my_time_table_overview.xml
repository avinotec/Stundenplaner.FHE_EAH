<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="true"
	android:focusable="true">

    <RelativeLayout
        android:id="@+id/layout_mytimetable_overview_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/list_header_horizontal_padding"
        android:paddingRight="@dimen/list_header_horizontal_padding"
        android:paddingTop="@dimen/list_item_vertical_padding"
        android:paddingBottom="@dimen/list_item_vertical_padding"
        android:background="@color/list_header_background">

		<TextView
			android:id="@+id/tv_mytimetable_courseTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:text="Course Title"
			android:textAppearance="@style/TextAppearance.AppCompat.Large"
			android:textColor="@color/list_header_text"
			android:visibility="visible" />


    </RelativeLayout>

	<TextView
		android:id="@+id/textview_mytimetable_overview_sets_label"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/layout_mytimetable_overview_header"
		android:layout_alignParentStart="true"
		android:layout_alignParentLeft="true"
		android:layout_marginStart="16dp"
		android:layout_marginLeft="16dp"
		android:layout_marginTop="5dp"
		android:text="Sets:"
		android:textAppearance="@style/TextAppearance.AppCompat.Medium"
		android:visibility="visible" />

	<TextView
		android:id="@+id/textview_mytimetable_overview_studygroups"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/layout_mytimetable_overview_header"
		android:layout_marginStart="16dp"
		android:layout_marginLeft="16dp"
		android:layout_marginTop="5dp"
		android:layout_toStartOf="@+id/btnRemoveCourse"
		android:layout_toLeftOf="@+id/btnRemoveCourse"
		android:layout_toEndOf="@id/textview_mytimetable_overview_sets_label"
		android:layout_toRightOf="@id/textview_mytimetable_overview_sets_label"
		android:text="TextView"
		android:textAppearance="@style/TextAppearance.AppCompat.Medium"
		android:visibility="visible" />

	<TextView
		android:id="@+id/textCourseTime"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/textview_mytimetable_overview_studygroups"
		android:layout_marginStart="16dp"
		android:layout_marginLeft="16dp"
		android:layout_marginTop="5dp"
		android:layout_marginBottom="10dp"
		android:text="Date"
		android:textAppearance="@style/TextAppearance.AppCompat.Small" />

	<TextView
		android:id="@+id/tv_mytimetable_overview_room"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/textview_mytimetable_overview_studygroups"
		android:layout_marginStart="15dp"
		android:layout_marginLeft="15dp"
		android:layout_marginTop="5dp"
		android:layout_toStartOf="@id/btnRemoveCourse"
		android:layout_toLeftOf="@id/btnRemoveCourse"
		android:layout_toEndOf="@+id/textCourseTime"
		android:layout_toRightOf="@+id/textCourseTime"
		android:text="Room" />


	<androidx.appcompat.widget.AppCompatImageButton
		android:id="@+id/btnRemoveCourse"
		android:layout_width="wrap_content"
		android:layout_height="40dp"
		android:layout_below="@+id/layout_mytimetable_overview_header"
		android:layout_alignTop="@id/textview_mytimetable_overview_sets_label"
		android:layout_alignBottom="@id/tv_mytimetable_overview_room"
		android:layout_alignParentRight="true"
		android:layout_marginTop="-5dp"
		android:layout_marginEnd="-5dp"
		android:layout_marginRight="10dp"
		android:background="@android:color/transparent"
		android:contentDescription="button remove course"
		app:srcCompat="@drawable/ic_baseline_delete" />

</RelativeLayout>

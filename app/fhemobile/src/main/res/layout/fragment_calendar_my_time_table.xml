<de.fhe.fhemobile.views.timetable.MyTimeTableCalendarView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.fhe.fhemobile.fragments.timetable.TimeTableFragment"
    >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:animateLayoutChanges="true"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/timetableEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/buttonshape"
                        android:text="@string/edit"
                        android:textColor="@color/drawer_item_text"
                        android:textSize="12sp" />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/jumpCurrentLesson"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/buttonshape"
                        android:text="@string/jump_current_lesson"
                        android:textColor="#009790"
                        android:textSize="12sp" />
                </LinearLayout>

                <ListView
                    android:id="@+id/lvCalendar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                </ListView>

                <TextView
                    android:id="@+id/emptyView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="test"
                    android:visibility="gone"></TextView>


            </LinearLayout>

        </LinearLayout>


</de.fhe.fhemobile.views.timetable.MyTimeTableCalendarView>

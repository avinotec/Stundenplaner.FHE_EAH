<de.fhe.fhemobile.views.mytimetable.MyTimeTableCalendarView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.fhe.fhemobile.fragments.timetable.TimeTableDialogFragment"
    android:background="@color/background"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lv_mytimetable_calendar_courses"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_mytimetable_calendar_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/my_time_table_empty_text_calendar"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>

</de.fhe.fhemobile.views.mytimetable.MyTimeTableCalendarView>

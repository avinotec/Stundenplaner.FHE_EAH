<de.fhe.fhemobile.views.mytimetable.MyTimeTableCalendarView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.fhe.fhemobile.fragments.timetable.TimeTableDialogFragment"
    android:background="@color/background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:animateLayoutChanges="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_mytimetable_calendar_modify_Schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/buttonshape"
                android:text="@string/my_timetable_modify_schedule"
                android:textColor="@color/primary_color"
                android:textSize="12sp"
                 />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_mytimetable_calendar_jump_to_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/buttonshape"
                android:text="@string/jump_to_current_lesson"
                android:textColor="@color/primary_color"
                android:textSize="12sp"
                 />
        </LinearLayout>

        <View style="@style/Divider"/>

        <ListView
            android:id="@+id/lv_mytimetable_calendar_courses"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        </ListView>

        <View style="@style/Divider"/>


    </LinearLayout>

</de.fhe.fhemobile.views.mytimetable.MyTimeTableCalendarView>

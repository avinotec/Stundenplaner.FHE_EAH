<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="true"
	android:focusable="true">

	<RelativeLayout
		android:id="@+id/layout_mytimetable_dialog_header"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/list_header_background"
		android:paddingLeft="@dimen/list_header_horizontal_padding"
		android:paddingTop="@dimen/list_item_vertical_padding"
		android:paddingRight="@dimen/list_header_horizontal_padding"
		android:paddingBottom="@dimen/list_item_vertical_padding">

		<TextView
			android:id="@+id/textview_mytimetable_dialog_courseTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:text="TextView"
			android:textAppearance="@style/TextAppearance.AppCompat.Large"
			android:textColor="@color/list_header_text"
			android:visibility="visible" />


	</RelativeLayout>

	<TextView
		android:id="@+id/textview_mytimetable_dialog_label_sets"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/layout_mytimetable_dialog_header"
		android:layout_alignParentStart="true"
		android:layout_alignParentLeft="true"
		android:layout_marginStart="16dp"
		android:layout_marginLeft="16dp"
		android:layout_marginTop="5dp"
		android:text="Sets:"
		android:textAppearance="@style/TextAppearance.AppCompat.Medium"
		android:visibility="visible" />

	<TextView
		android:id="@+id/textview_mytimetable_dialog_studygroups"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/layout_mytimetable_dialog_header"
		android:layout_marginStart="16dp"
		android:layout_marginLeft="16dp"
		android:layout_marginTop="5dp"
		android:layout_toStartOf="@+id/btnAddCourse"
		android:layout_toLeftOf="@+id/btnAddCourse"
		android:layout_toEndOf="@id/textview_mytimetable_dialog_label_sets"
		android:layout_toRightOf="@id/textview_mytimetable_dialog_label_sets"
		android:text="TextView"
		android:textAppearance="@style/TextAppearance.AppCompat.Medium"
		android:visibility="visible" />


	<ToggleButton
		android:id="@+id/btnAddCourse"
		android:layout_width="40dp"
		android:layout_height="30dp"
		android:layout_below="@+id/layout_mytimetable_dialog_header"
		android:layout_alignTop="@id/textview_mytimetable_dialog_label_sets"
		android:layout_alignBottom="@id/layout_my_time_table_course_dates"
		android:layout_alignParentEnd="true"
		android:layout_centerVertical="true"
		android:layout_marginTop="0dp"
		android:layout_marginEnd="3dp"
		android:layout_marginRight="3dp"
		android:background="@android:color/transparent"
		android:button="@drawable/selector_toggle"
		android:contentDescription="Button to add a course"
		android:textOff=""
		android:textOn="" />

	<LinearLayout
		android:id="@+id/layout_my_time_table_course_dates"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignStart="@id/textview_mytimetable_dialog_label_sets"
		android:layout_toLeftOf="@id/btnAddCourse"
		android:layout_below="@+id/textview_mytimetable_dialog_studygroups"
		android:layout_marginTop="5dp"
		android:layout_marginBottom="5dp"
		android:orientation="vertical" />

</RelativeLayout>

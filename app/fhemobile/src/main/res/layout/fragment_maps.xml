<de.fhe.fhemobile.views.maps.MapsView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.fhe.fhemobile.fragments.maps.MapsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_image_height"
            android:id="@+id/imageView"
            android:src="@drawable/th_maps"
            android:scaleType="centerCrop" 
            />

        <ListView
            android:id="@+id/mapsChoiceList"
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            />

    </LinearLayout>

</de.fhe.fhemobile.views.maps.MapsView>

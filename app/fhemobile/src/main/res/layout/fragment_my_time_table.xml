<de.fhe.fhemobile.views.timetable.MyTimeTableView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="de.fhe.fhemobile.fragments.timetable.TimeTableFragment">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:animateLayoutChanges="true"
                >

                <Button
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="16dp"
                    android:id="@+id/timetableAddLesson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_lesson"
                    android:textColor="#009790"
                    android:textSize="12sp"
                    android:background="@drawable/buttonshape"/>

                <ListView
                    android:id="@+id/lvLessons"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null"
                    android:dividerHeight="0dp">

                </ListView>

	            <TextView
		            android:id="@+id/emptyView"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:gravity="center"
		            android:text="test"
		            android:visibility="gone" />


            </LinearLayout>

        </LinearLayout>


</de.fhe.fhemobile.views.timetable.MyTimeTableView>
